---
interface Props {
  title: string;
  href: string;
}

const { title, href } = Astro.props;
---

<section class="next-section">
  <div class="next-section-content">
    <div class="next-content">
      <div class="divider"></div>
      <h2 class="label">Next</h2>
      <a href={href} class="next-title">
        <h1>{title}</h1>
      </a>
    </div>
  </div>
</section>

<style>
  .next-section {
    width: 100%;
    padding: var(--space-12) 0;
  }

  .next-section-content {
    width: 80vw;
    max-width: 1440px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: var(--space-4);
  }

  .next-content {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .divider {
    width: 100%;
    height: 1px;
    background-color: var(--colors-border-moderate);
    margin-bottom: var(--space-4);
  }

  .label {
    font-size: var(--fs-base);
    text-transform: uppercase;
    color: var(--colors-text-secondary);
    margin-bottom: var(--space-4);
  }

  .next-title {
    text-decoration: none;
    color: var(--colors-text-primary);
    transition: color 0.2s ease;
  }

  .next-title:hover {
    color: var(--colors-text-secondary);
  }

  .next-title h1 {
    font-size: var(--fs-2xl);
    font-weight: 600;
    margin: 0;
  }

  @media (max-width: 768px) {
    .next-section-content {
      width: 90vw;
    }

    .next-title h1 {
      font-size: var(--fs-xl);
    }
  }
</style> 