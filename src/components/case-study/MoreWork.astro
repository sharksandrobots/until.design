---
interface Props {
  items?: Array<{
    title: string;
    subtitle: string;
    slug: string;
    image: {
      src: string;
      alt: string;
    };
  }>;
}

const { items = [] } = Astro.props;
---

<section class="more-work">
  <div class="more-work-content">
    <div class="divider"></div>
    <h2 class="label">More Work</h2>
    <div class="work-grid">
      {items.map((item) => (
        <a href={item.slug} class="work-item">
          <div class="image-wrapper">
            <img src={item.image.src} alt={item.image.alt} />
          </div>
          <h3>{item.title}</h3>
          <p>{item.subtitle}</p>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .more-work {
    width: 100%;
    padding: var(--space-6) 0;
  }

  .more-work-content {
    width: 80vw;
    max-width: 1440px;
    margin: 0 auto;
  }

  .divider {
    width: 100%;
    height: 1px;
    background-color: var(--colors-border);
    margin-bottom: var(--space-4);
  }

  .label {
    font-size: var(--fs-md);
    font-weight: 500;
    color: var(--colors-text-primary);
    margin-bottom: var(--space-4);
  }

  .work-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
  }

  .work-item {
    text-decoration: none;
    color: inherit;
  }

  .image-wrapper {
    width: 100%;
    aspect-ratio: 16/9;
    overflow: hidden;
    border-radius: var(--radius-md);
    margin-bottom: var(--space-2);
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .work-item h3 {
    font-size: var(--fs-md);
    font-weight: 500;
    color: var(--colors-text-primary);
    margin-bottom: var(--space-1);
  }

  .work-item p {
    font-size: var(--fs-sm);
    color: var(--colors-text-secondary);
  }

  @media (max-width: 768px) {
    .more-work-content {
      width: 90vw;
    }

    .work-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 