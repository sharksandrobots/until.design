---
interface Props {
  items: Array<{
    title: string;
    image: string;
    href: string;
    type: 'Case Study' | 'Project Snapshot';
  }>;
}

const { items } = Astro.props;
---

<section class="more-work-section">
  <div class="more-work-content">
    <div class="more-work-header">
      <div class="divider"></div>
      <h2 class="label">More Work</h2>
    </div>
    <div class="work-grid">
      {items.map((item) => (
        <a href={item.href} class="work-card">
          <div class="image-container">
            <img src={item.image} alt={item.title} />
            <div class="overlay"></div>
          </div>
          <div class="card-content">
            <span class="card-type">{item.type}</span>
            <h3 class="card-title">{item.title}</h3>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .more-work-section {
    width: 100%;
    padding: var(--space-8) 0;
  }

  .more-work-content {
    width: 80vw;
    max-width: 1440px;
    margin: 0 auto;
  }

  .more-work-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .divider {
    width: 100%;
    height: 1px;
    background-color: var(--colors-border-moderate);
    margin-bottom: var(--space-4);
  }

  .label {
    font-size: var(--fs-base);
    text-transform: uppercase;
    color: var(--colors-text-secondary);
  }

  .work-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
  }

  .work-card {
    display: block;
    text-decoration: none;
    color: var(--colors-text-primary);
    transition: transform 0.2s ease;
  }

  .work-card:hover {
    transform: translateY(-4px);
  }

  .image-container {
    position: relative;
    width: 100%;
    aspect-ratio: 4/3;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: var(--space-2);
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    transition: background-color 0.2s ease;
  }

  .work-card:hover .overlay {
    background-color: rgba(0, 0, 0, 0.3);
  }

  .card-content {
    padding: var(--space-2) 0;
  }

  .card-type {
    display: block;
    font-size: var(--fs-sm);
    text-transform: uppercase;
    color: var(--colors-text-secondary);
    margin-bottom: var(--space-1);
    letter-spacing: 0.05em;
  }

  .card-title {
    font-size: var(--fs-md);
    font-weight: 600;
    line-height: 1.3;
  }

  @media (max-width: 768px) {
    .more-work-content {
      width: 90vw;
    }

    .work-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 