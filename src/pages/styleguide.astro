---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Style Guide">
  <div class="styleguide">
    <section class="section">
      <h1>Typography</h1>
      
      <div class="subsection">
        <h2>Headings</h2>
        <div class="type-example">
          <h1>Heading 1 (var(--h1))</h1>
          <code>var(--h1)</code>
        </div>
        <div class="type-example">
          <h2>Heading 2 (var(--h2))</h2>
          <code>var(--h2)</code>
        </div>
        <div class="type-example">
          <h3>Heading 3 (var(--h3))</h3>
          <code>var(--h3)</code>
        </div>
        <div class="type-example">
          <h4>Heading 4 (var(--h4))</h4>
          <code>var(--h4)</code>
        </div>
        <div class="type-example">
          <h5>Heading 5 (var(--h5))</h5>
          <code>var(--h5)</code>
        </div>
      </div>

      <div class="subsection">
        <h2>Body Copy</h2>
        <div class="type-example">
          <p>Body text (var(--fs-base)) - The quick brown fox jumps over the lazy dog.</p>
          <code>var(--fs-base)</code>
        </div>
        <div class="type-example">
          <p class="small-text">Small text (var(--smallText)) - The quick brown fox jumps over the lazy dog.</p>
          <code>var(--smallText)</code>
        </div>
      </div>
    </section>

    <section class="section">
      <h1>Spacing Scale</h1>
      <div class="spacing-grid">
        <div class="spacing-example">
          <div class="spacing-box" style="width: var(--space-1)"></div>
          <code>--space-1 (4px)</code>
        </div>
        <div class="spacing-example">
          <div class="spacing-box" style="width: var(--space-2)"></div>
          <code>--space-2 (8px)</code>
        </div>
        <div class="spacing-example">
          <div class="spacing-box" style="width: var(--space-3)"></div>
          <code>--space-3 (12px)</code>
        </div>
        <div class="spacing-example">
          <div class="spacing-box" style="width: var(--space-4)"></div>
          <code>--space-4 (16px)</code>
        </div>
        <div class="spacing-example">
          <div class="spacing-box" style="width: var(--space-6)"></div>
          <code>--space-6 (24px)</code>
        </div>
        <div class="spacing-example">
          <div class="spacing-box" style="width: var(--space-8)"></div>
          <code>--space-8 (32px)</code>
        </div>
        <div class="spacing-example">
          <div class="spacing-box" style="width: var(--space-12)"></div>
          <code>--space-12 (48px)</code>
        </div>
        <div class="spacing-example">
          <div class="spacing-box" style="width: var(--space-16)"></div>
          <code>--space-16 (64px)</code>
        </div>
      </div>
    </section>

    <section class="section">
      <h1>Color System</h1>
      
      <div class="subsection">
        <h2>Gray Scale</h2>
        <div class="color-grid">
          <div class="color-example" style="background-color: var(--color-gray-100)">
            <code>--color-gray-100</code>
          </div>
          <div class="color-example" style="background-color: var(--color-gray-200)">
            <code>--color-gray-200</code>
          </div>
          <div class="color-example" style="background-color: var(--color-gray-300)">
            <code>--color-gray-300</code>
          </div>
          <div class="color-example" style="background-color: var(--color-gray-400)">
            <code>--color-gray-400</code>
          </div>
          <div class="color-example" style="background-color: var(--color-gray-500)">
            <code>--color-gray-500</code>
          </div>
          <div class="color-example" style="background-color: var(--color-gray-600)">
            <code>--color-gray-600</code>
          </div>
          <div class="color-example" style="background-color: var(--color-gray-700)">
            <code>--color-gray-700</code>
          </div>
          <div class="color-example" style="background-color: var(--color-gray-800)">
            <code>--color-gray-800</code>
          </div>
          <div class="color-example" style="background-color: var(--color-gray-900)">
            <code>--color-gray-900</code>
          </div>
        </div>
      </div>

      <div class="subsection">
        <h2>Brand Colors</h2>
        <div class="color-grid">
          <div class="color-example" style="background-color: var(--color-olive-drab)">
            <code>--color-olive-drab</code>
          </div>
          <div class="color-example" style="background-color: var(--color-olive-bold)">
            <code>--color-olive-bold</code>
          </div>
          <div class="color-example" style="background-color: var(--color-olive-moderate)">
            <code>--color-olive-moderate</code>
          </div>
          <div class="color-example" style="background-color: var(--color-olive-subtle)">
            <code>--color-olive-subtle</code>
          </div>
          <div class="color-example" style="background-color: var(--color-orange-bright)">
            <code>--color-orange-bright</code>
          </div>
          <div class="color-example" style="background-color: var(--color-orange-burnt)">
            <code>--color-orange-burnt</code>
          </div>
        </div>
      </div>

      <div class="subsection">
        <h2>Semantic Colors</h2>
        <div class="color-grid">
          <div class="color-example" style="background-color: var(--colors-surface-primary)">
            <code>--colors-surface-primary</code>
          </div>
          <div class="color-example" style="background-color: var(--colors-surface-secondary)">
            <code>--colors-surface-secondary</code>
          </div>
          <div class="color-example" style="background-color: var(--colors-surface-accent)">
            <code>--colors-surface-accent</code>
          </div>
          <div class="color-example" style="background-color: var(--colors-text-primary)">
            <code>--colors-text-primary</code>
          </div>
          <div class="color-example" style="background-color: var(--colors-text-secondary)">
            <code>--colors-text-secondary</code>
          </div>
          <div class="color-example" style="background-color: var(--colors-text-tertiary)">
            <code>--colors-text-tertiary</code>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .styleguide {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-8);
  }

  .section {
    margin-bottom: var(--space-16);
  }

  .subsection {
    margin-bottom: var(--space-8);
  }

  .type-example {
    margin-bottom: var(--space-4);
    padding: var(--space-4);
    background-color: var(--colors-surface-secondary);
    border-radius: 4px;
  }

  .type-example code {
    display: block;
    margin-top: var(--space-2);
    font-size: var(--fs-sm);
    color: var(--colors-text-tertiary);
  }

  .spacing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--space-4);
  }

  .spacing-example {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .spacing-box {
    height: 40px;
    background-color: var(--colors-surface-secondary);
    border-radius: 4px;
  }

  .color-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--space-4);
  }

  .color-example {
    aspect-ratio: 1;
    display: flex;
    align-items: flex-end;
    padding: var(--space-4);
    border-radius: 4px;
    border: 1px solid var(--colors-border-subtle);
  }

  .color-example code {
    color: var(--colors-text-primary);
    font-size: var(--fs-sm);
    background-color: var(--colors-surface-primary);
    padding: var(--space-1) var(--space-2);
    border-radius: 4px;
  }

  @media (max-width: 768px) {
    .styleguide {
      padding: var(--space-4);
    }

    .spacing-grid,
    .color-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 