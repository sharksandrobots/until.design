<style>
	.home {
		width: 100%;
		padding: var(--space-4) 0;
	}

	.content {
		width: 80vw;
		max-width: 1440px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: repeat(6, 1fr);
		gap: var(--space-4);
		padding: var(--space-4) 0;
	}

	.intro {
		grid-column: 1 / span 4;
		display: flex;
		flex-direction: column;
		gap: var(--space-4);
		margin-bottom: var(--space-8);
	}

	.intro-title {
		font-size: var(--h1);
		font-weight: 700;
		line-height: 1.2;
		color: var(--colors-text-primary);
	}

	.intro-text {
		font-size: var(--fs-base);
		line-height: 1.5;
		color: var(--colors-text-secondary);
	}

	.section-header {
		grid-column: 1 / -1;
		font-size: var(--h2);
		font-weight: 600;
		color: var(--colors-text-primary);
		margin-bottom: var(--space-4);
	}

	/* Featured Case Studies */
	.case-study {
		grid-column: 1 / -1;
		display: grid;
		grid-template-columns: repeat(5, 1fr);
		gap: var(--space-4);
		margin-bottom: var(--space-8);
	}

	.case-study .image-block {
		grid-column: 1 / -1;
		width: 100%;
		max-height: 40rem;
		background-color: var(--colors-surface-secondary);
		position: relative;
		overflow: hidden;
	}

	.case-study .image-block img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.case-study .content-block {
		grid-column: 1 / span 3;
	}

	.headline {
		font-size: var(--h3);
		font-weight: 600;
		color: var(--colors-text-primary);
	}

	.eyebrow {
		font-size: var(--fs-sm);
		font-weight: 500;
		color: var(--colors-text-secondary);
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.description {
		font-size: var(--fs-base);
		color: var(--colors-text-secondary);
		line-height: 1.5;
	}

	/* Featured Projects */
	.projects-grid {
		grid-column: 1 / -1;
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--space-4);
		width: 100%;
	}

	.project {
		display: flex;
		flex-direction: column;
		gap: var(--space-4);
		width: 100%;
		max-width: 100%;
		margin-bottom: var(--space-8);
	}

	.project .image-block {
		width: 100%;
		aspect-ratio: 16/9;
		background-color: var(--colors-surface-secondary);
		position: relative;
		border-radius: var(--radius-lg);
		overflow: hidden;
	}

	.project .image-block img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.project .content-block {
		display: flex;
		flex-direction: column;
		width: 100%;
	}

	@media (max-width: 768px) {
		.content {
			width: 90vw;
			gap: var(--space-4);
		}

		.intro {
			grid-column: 1 / -1;
		}

		.intro-title {
			font-size: var(--fs-xl);
		}

		.case-study .content-block {
			grid-column: 1 / -1;
		}

		.projects-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
