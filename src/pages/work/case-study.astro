---
// case-study.astro
import Layout from '../../layouts/Layout.astro';
import ImageGrid from '../../components/case-study/ImageGrid.astro';
import Image from '../../components/case-study/Image.astro';
import Section from '../../components/case-study/Section.astro';
import ImpactOutcomes from '../../components/case-study/ImpactOutcomes.astro';
import ImpactOutcome from '../../components/case-study/ImpactOutcome.astro';
import NextCaseStudy from '../../components/case-study/NextCaseStudy.astro';

export interface Props {
  frontmatter: {
    title: string;
    subtitle: string;
    client: string;
    role: string;
    contribution: string[];
    caseType: 'Case Study';
    projectType: string[];
    leadImage: {
      src: string;
      alt: string;
    };
  };
  Content: any; // MDX component
}

const { frontmatter, Content } = Astro.props;
---

<Layout title={`${frontmatter.title} - Mike Bowser`}>
  <article class="case-study">
    <!-- Intro Section -->
    <section class="intro">
      <div class="intro-grid">
        <!-- Client and blurb (columns 1-4) -->
        <div class="intro-content">
          <h5 class="type">{frontmatter.caseType}</h5>
          <h1 class="client-name">{frontmatter.title}</h1>
          <p class="subtitle">{frontmatter.subtitle}</p>
        </div>
        
        <!-- Role info (columns 5-6) -->
        <div class="intro-meta">
          <div class="meta-item">
            <h3 class="meta-label">Role</h3>
            <p class="meta-value">{frontmatter.role}</p>
          </div>
          <div class="meta-item">
            <h3 class="meta-label">Contribution</h3>
            <ul class="meta-services">
              {frontmatter.contribution.map(item => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Lead Image -->
    <section class="lead-image">
      <div class="lead-image-container">
        <img 
          src={frontmatter.leadImage.src} 
          alt={frontmatter.leadImage.alt}
          class="lead-img"
        />
      </div>
    </section>

    <!-- Main Content Section -->
    <main class="main-content">
      <Content components={{
        ImageGrid,
        Image,
        Section,
        ImpactOutcomes,
        ImpactOutcome,
        NextCaseStudy
      }} />
    </main>
  </article>
</Layout>

<style>
  .case-study {
    font-family: var(--bodyFont);
  }
  
  /* Intro Section */
  .intro {
    max-width: 80vw;
    margin: 0 auto;
    padding: var(--space-12) 0;
  }
  
  .intro-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-6);
  }
  
  .client-name {
    font-size: var(--fs-xl);
    font-weight: 500;
    margin-bottom: var(--space-3);
    color: var(--colors-text-primary);
  }
  
  .subtitle {
    font-size: var(--fs-lg);
    color: var(--colors-text-secondary);
    line-height: 1.4;
    margin:0 0 var(--space-4) 0;
  }
  
  .intro-meta {
    gap: var(--space-4);
  }

  .meta-item {
    margin-bottom: var(--space-3);
  }
  
  .meta-label {
    font-size: var(--fs-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--colors-text-tertiary);
    margin-bottom: var(--space-1);
  }
  
  .meta-value {
    font-size: var(--fs-base);
    color: var(--colors-text-primary);
    margin:0 0 var(--space-2) 0;

  }
  
  .meta-services {
    list-style: none;
    padding: 0;
  }
  
  .meta-services li {
    font-size: var(--fs-base);
    color: var(--colors-text-primary);
    padding: 0;
    margin-bottom: var(--space-1);
  }
  
  .meta-services li::before {
    display: none;
  }
  
  /* Lead Image */
  .lead-image {
    width: 100%;
    background-color: var(--colors-surface-inverse);
    padding: var(--space-8) 0;
  }
  
  .lead-image-container {
    max-width: 80vw;
    margin: 0 auto;
    text-align: center;
  }
  
  .lead-img {
    width: 100%;
    height: auto;
    margin: 0 auto;
  }
  
  /* Main Content */
  .main-content {
    padding: var(--space-8) 0;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .intro {
      max-width: 90vw;
    }
    
    .lead-image-container {
      max-width: 90vw;
    }
    
    .intro-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
    
    .main-content :global(.impact-outcomes) {
      max-width: 90vw;
      grid-template-columns: 1fr;
    }
  }
</style>