---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Work - Mike Bowser">
	<main class="work">
		<section class="content">
			<div class="intro">
				<h1 class="intro-title">Work</h1>
				<p class="intro-text">A collection of case studies and projects showcasing my approach to design challenges and solutions.</p>
			</div>
		</section>

		<section class="content">
			<h2 class="section-header">Case Studies</h2>
			<div class="case-studies-grid">
				<!-- Case studies will be listed here -->
			</div>
		</section>

		<section class="content">
			<h2 class="section-header">Projects</h2>
			<div class="projects-grid">
				<!-- Projects will be listed here -->
			</div>
		</section>
	</main>
</Layout>

<style>
	.work {
		width: 100%;
		padding: var(--space-4) 0;
	}

	.content {
		width: 80vw;
		max-width: 1440px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: repeat(6, 1fr);
		gap: var(--space-4);
		padding: var(--space-4) 0;
	}

	.intro {
		grid-column: 1 / span 4;
		display: flex;
		flex-direction: column;
		gap: var(--space-4);
		margin-bottom: var(--space-8);
	}

	.intro-title {
		font-size: var(--h1);
		font-weight: 700;
		line-height: 1.2;
		color: var(--colors-text-primary);
	}

	.intro-text {
		font-size: var(--fs-base);
		line-height: 1.5;
		color: var(--colors-text-secondary);
	}

	.section-header {
		grid-column: 1 / -1;
		font-size: var(--h2);
		font-weight: 600;
		color: var(--colors-text-primary);
		margin-bottom: var(--space-4);
	}

	.case-studies-grid {
		grid-column: 1 / -1;
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--space-4);
	}

	.projects-grid {
		grid-column: 1 / -1;
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: var(--space-4);
	}

	@media (max-width: 768px) {
		.content {
			width: 90vw;
			gap: var(--space-4);
		}

		.intro {
			grid-column: 1 / -1;
		}

		.intro-title {
			font-size: var(--fs-xl);
		}

		.case-studies-grid,
		.projects-grid {
			grid-template-columns: 1fr;
		}
	}
</style> 