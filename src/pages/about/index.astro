---
import { getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const about = await getEntry('about', 'about');
if (!about) {
	throw new Error('About page content not found');
}
const { Content } = await about.render();
---

<Layout title={`${about.data.title} - Mike Bowser`}>
	<main class="about">
		<div class="content">
			<Content />
		</div>
	</main>
</Layout>

<style>
	.about {
		width: 100%;
		padding: var(--space-4) 0;
	}

	.content {
		width: 80vw;
		max-width: 1440px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: repeat(6, 1fr);
		column-gap: var(--space-2);
		padding: var(--space-2) 0;
	}

	.content :global(h1) {
		grid-column: 2 / span 3;
		font-size: var(--fs-xl);
		font-weight: 500;
		color: var(--colors-text-primary);
		margin: var(--space-lg) 0 var(--space-lg) 0;
	}

	.content :global(h2) {
		grid-column: 2 / span 3;
		font-size: var(--fs-lg);
		font-weight: 500;
		color: var(--colors-text-primary);
		margin: var(--space-md) 0 var(--space-md) 0;
	}

	.content :global(h3) {
		grid-column: 2 / span 3;
		font-size: var(--fs-md);
		font-weight: 500;
		color: var(--colors-text-primary);
		margin: var(--space-2) 0 var(--space-3) 0;
	}

	.content :global(p) {
		grid-column: 2 / span 3;
		font-size: var(--fs-base);
		line-height: 1.5;
		color: var(--colors-text-primary);
		margin: 0 0 var(--space-3) 0 !important;
	}
    .content :global(ul,ol) {
		grid-column: 2 / span 3;
		font-size: var(--fs-base);
		line-height: 1.5;
		color: var(--colors-text-primary);
		margin: 0;
	}

    .content :global(ul li) {
        margin: 0 0 var(--space-3) 0 !important;
    }


	.content :global(figure) {
		grid-column: 1 / -1;
		margin: var(--space-4) 0;
	}

	.content :global(figure img) {
		width: 100%;
		height: auto;
		display: block;
	}

	.content :global(figcaption) {
		margin-top: var(--space-2);
		font-size: var(--fs-sm);
		color: var(--colors-text-secondary);
		text-align: center;
	}

	.content :global(.two-images) {
		grid-column: 1 / -1;
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--space-4);
	}

	.content :global(.two-images figure) {
		margin: 0;
		display: flex;
		flex-direction: column;
	}

	.content :global(.two-images figcaption) {
		margin-top: var(--space-2);
		text-align: center;
	}

	.content :global(.three-images) {
		grid-column: 1 / -1;
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: var(--space-4);
	}

	.content :global(.three-images figure) {
		margin: 0;
		display: flex;
		flex-direction: column;
	}

	.content :global(.three-images figcaption) {
		margin-top: var(--space-2);
		text-align: center;
	}

	@media (max-width: 768px) {
		.content {
			width: 90vw;
			gap: var(--space-4);
		}

		.content :global(h1),
		.content :global(h2),
		.content :global(h3),
		.content :global(p) {
			grid-column: 1 / -1;
		}

		.content :global(.two-images),
		.content :global(.three-images) {
			grid-template-columns: 1fr;
		}
	}
</style> 